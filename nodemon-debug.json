{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/nodemon.json",
    "ignore": [
        ".git",
        "node_modules",
        "dist"
    ],
    "watch": [
        "./server"
    ],
    "exec": "cross-env TS_NODE_PROJECT=tsconfig.server.json node --inspect -r ts-node/register ./server/main.ts",
    "ext": "ts"
}